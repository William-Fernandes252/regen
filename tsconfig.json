{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@test/*": ["__tests__/*"]
		},
		"types": ["jest", "node"],
		"typeRoots": ["src/types", "node_modules/@types"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	}
}
